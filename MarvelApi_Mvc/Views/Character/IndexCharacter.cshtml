@using MarvelApi_Mvc.Models.DTOs.CharacterDTOs
@model CharacterDTO

<body class="inner-page comic-detail-page">
	<section id="page-title">
		<div id="backtotop">
			<a href="#page-title" id="backtotop-value"><i class="fa-solid fa-arrow-up"></i></a>
		</div>
	</section>
	<section id="comic-details">
		<div class="container zindex">
			<div class="row details-pos">
				<div class="main-info-section row">
					<div class="col-lg-5 comic-detail-img">
						<img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" alt="comic-img" class="img-fluid">
					</div>
					<div class="col-lg-6 comic-detail-txt">
						<h3>@Model.Name</h3>
						<div class="mb-2">
							<span>Appereance</span>
							<p>@Model.Appearance</p>
						</div>
						<div class="mb-2">
							<span>First Appearance</span>
							<p>@Model.FirstAppearanceYear</p>
						</div>
						<div class="mb-2">
							<span>Origin</span>
							<p>@Model.Origin</p>
						</div>
						<div class="mb-2">
							<span>Team</span>
							@if (string.IsNullOrEmpty(Model.Team))
							{
								<p>None</p>
							}
							else
							{
								<p>@Model.Team</p>
							}
						</div>
					</div>
				</div>				
				<div class="backstory-section text-white p-5">
					<div class="section-title t-white mt-5">
						<div class="row">
							<div>
								<h4>Backstory</h4>
							</div>
						</div>
					</div>
					<div class="row align-items-center justify-content-around">
						<div class="team-counter">
							<p class="pt-16">
								Welcome to MarvelApi, a web application bringing the Marvel comics universe to your
								fingertips.
								Utilizing cutting-edge .NET technologies, MarvelApi offers robust, scalable solutions with
								detailed information on Marvel characters via the
								Marvel Comics API, providing an immersive user experience.
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>
@using MarvelApi_Mvc.Models.ViewModels.Team
@model TeamUpdateViewModel
<br />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<body>
    <section id="banner">
        <div id="backtotop">
            <a href="#banner" id="backtotop-value"><i class="fa-solid fa-arrow-up"></i></a>
        </div>
    </section>

    <form asp-controller="Team" asp-action="UpdateTeam" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="TeamUpdateDTO.Id" />
    <!-- Name -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="TeamUpdateDTO.Name" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="TeamUpdateDTO.Name" class="form-control" />
            <span asp-validation-for="TeamUpdateDTO.Name" class="text-danger"></span>
        </div>
    </div>
    <!-- Backstory -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="TeamUpdateDTO.Description" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="TeamUpdateDTO.Description" class="form-control" />
            <span asp-validation-for="TeamUpdateDTO.Description" class="text-danger"></span>
        </div>
    </div>
    <!--Image  -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="TeamUpdateDTO.ImageFile" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="TeamUpdateDTO.ImageFile" type="file" class="form-control" />
            <span asp-validation-for="TeamUpdateDTO.ImageFile" class="text-danger"></span>
        </div>
    </div>
    <!-- Members -->
    <div class="row m-2">
        <div class="col-2">
            <label class="control-label pt-2" style="font-size: 20px">Members</label>
        </div>
        <div class="col-6">
            <select asp-for="TeamUpdateDTO.MemberIds" asp-items="Model.AvailableCharacters" class="form-control" multiple="multiple"></select>
            <span asp-validation-for="TeamUpdateDTO.MemberIds" class="text-danger"></span>
        </div>
    </div>
    <!-- Submit Button -->
    <div class="row m-2">
        <div class="col-3 d-flex">
            <button type="submit" class="btn btn-success flex-grow-1 mr-2">Submit</button>
            <a href="@Url.Action("IndexTeam", "Team")" class="btn btn-danger flex-grow-1">Cancel</a>
        </div>
    </div>
</form>
</body>
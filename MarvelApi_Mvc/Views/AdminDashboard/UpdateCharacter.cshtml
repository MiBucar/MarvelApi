@using MarvelApi_Mvc.Models.ViewModels.Character
@model CharacterUpdateViewModel
<br />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<form asp-controller="Character" asp-action="UpdateCharacter" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="CharacterUpdateDTO.Id" type="hidden" />
    <!-- Name -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Name" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Name" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Name" class="text-danger"></span>
        </div>
    </div>
    <!-- Durability -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Durability" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Durability" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Durability" class="text-danger"></span>
        </div>
    </div>
    <!-- Energy -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Energy" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Energy" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Energy" class="text-danger"></span>
        </div>
    </div>
    <!-- Fighting Skills -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.FightingSkills" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.FightingSkills" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.FightingSkills" class="text-danger"></span>
        </div>
    </div>
    <!-- Strength -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Strength" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Strength" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Strength" class="text-danger"></span>
        </div>
    </div>
    <!-- Intelligence -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Intelligence" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Intelligence" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Intelligence" class="text-danger"></span>
        </div>
    </div>
    <!-- Speed -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Speed" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Speed" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Speed" class="text-danger"></span>
        </div>
    </div>
    <!-- Height -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Height" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Height" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Height" class="text-danger"></span>
        </div>
    </div>
    <!-- Eyes -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Eyes" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Eyes" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Eyes" class="text-danger"></span>
        </div>
    </div>
    <!-- Weight -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Weight" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Weight" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Weight" class="text-danger"></span>
        </div>
    </div>
    <!-- Hair -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Hair" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Hair" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Hair" class="text-danger"></span>
        </div>
    </div>
    <!-- Checkbox -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.IsVillain" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            @Html.CheckBoxFor(x => x.CharacterUpdateDTO.IsVillain)
        </div>
    </div>
    <!-- Backstory -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Backstory" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Backstory" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Backstory" class="text-danger"></span>
        </div>
    </div>
    <!--Image  -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.ImageFile" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.ImageFile" type="file" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.ImageFile" class="text-danger"></span>
        </div>
    </div>
    <!--Appearance  -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Appearance" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Appearance" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Appearance" class="text-danger"></span>
        </div>
    </div>
    <!-- First Appearance  -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.FirstAppearanceYear" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.FirstAppearanceYear" type="number" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.FirstAppearanceYear" class="text-danger"></span>
        </div>
    </div>
    <!-- Origin -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Origin" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Origin" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Origin" class="text-danger"></span>
        </div>
    </div>
    <!-- Powers -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.Powers" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <input asp-for="CharacterUpdateDTO.Powers" class="form-control" />
            <span asp-validation-for="CharacterUpdateDTO.Powers" class="text-danger"></span>
        </div>
    </div>
    <!-- Team -->
    <div class="row m-2">
        <div class="col-2">
            <label class="control-label pt-2" style="font-size: 20px">Team</label>
        </div>
        <div class="col-6">
            <select asp-for="CharacterUpdateDTO.TeamId" asp-items="Model.AvailableTeams" class="form-control"></select>
            <span asp-validation-for="CharacterUpdateDTO.TeamId" class="text-danger"></span>
        </div>
    </div>
    <!-- EnemyIds -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.EnemyIds" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <select asp-for="CharacterUpdateDTO.EnemyIds" asp-items="Model.AvailableCharacters" class="form-control" multiple="multiple"></select>
            <span asp-validation-for="CharacterUpdateDTO.EnemyIds" class="text-danger"></span>
        </div>
    </div>
    <!-- AllyIds -->
    <div class="row m-2">
        <div class="col-2">
            <label asp-for="CharacterUpdateDTO.AllyIds" class="control-label pt-2" style="font-size: 20px"></label>
        </div>
        <div class="col-6">
            <select asp-for="CharacterUpdateDTO.AllyIds" asp-items="Model.AvailableCharacters" class="form-control" multiple="multiple"></select>
            <span asp-validation-for="CharacterUpdateDTO.AllyIds" class="text-danger"></span>
        </div>
    </div>
    <!-- Submit Button -->
    <div class="row m-2">
        <div class="col-3 d-flex">
            <button type="submit" class="btn btn-success flex-grow-1 mr-2">Submit</button>
            <a href="@Url.Action("IndexCharacter", "Character")" class="btn btn-danger flex-grow-1">Cancel</a>
        </div>
    </div>
</form>